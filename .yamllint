---
extends: default

# Donâ€™t lint docs/assets/GH workflows
ignore: |
  docs/**
  assets/**
  .github/workflows/**

rules:
  document-start: disable
  truthy: disable
  line-length:
    max: 200
    allow-non-breakable-words: true
  empty-lines:
    max: 4
  indentation: disable
  hyphen-indentation: disable
  trailing-spaces: disable
  new-line-at-end-of-file: disable
  braces: disable
